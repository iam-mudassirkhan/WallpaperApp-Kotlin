<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/closeDrawer"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:src="@drawable/ic_close_drawer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textSize="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/closeDrawer"
        app:layout_constraintStart_toEndOf="@+id/closeDrawer"
        app:layout_constraintBottom_toBottomOf="@id/closeDrawer"
        />

    <ImageView
        android:id="@+id/favouriteIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_favourite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/closeDrawer"
        app:layout_goneMarginTop="@dimen/_70sdp" />

    <TextView
        android:id="@+id/btnGoToFavouriteFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favourite"
        android:textSize="@dimen/_16sdp"
        android:clickable="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/favouriteIcon"
        app:layout_constraintStart_toEndOf="@+id/favouriteIcon"
        app:layout_constraintBottom_toBottomOf="@id/favouriteIcon"
        android:focusable="true" />


</androidx.constraintlayout.widget.ConstraintLayout>